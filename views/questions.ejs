<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>أسئلتي</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- أيقونات Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <div class="container mt-5 text-end">
        <h1 class="text-center mb-4">أسئلتي</h1>
        <ul class="list-group">
            <% questions.forEach(q => { %>
                <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <strong><%= q.text %></strong>
                        <form action="/delete-question/<%= q._id %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('هل أنت متأكد أنك تريد حذف هذا السؤال؟')">
                                <i class="bi bi-trash"></i> حذف
                            </button>
                        </form>
                    </div>
                    <ul class="list-group mt-2">
                        <% q.answers.forEach((a,index) => { %>
                            <li class="list-group-item <%= index == q.correctAnswer ? 'bg-success bg-opacity-10' : '' %>">
                                <%= a %>
                                <% if (index == q.correctAnswer) { %>
                                  <i class="bi bi-check text-success ms-2"></i>
                                <% } %>
                            </li>
                        <% }) %>
                    </ul>
                </li>
            <% }) %>
        </ul>
        <div class="text-center mt-4">
            <a href="/" class="btn btn-primary">إضافة سؤال</a>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
